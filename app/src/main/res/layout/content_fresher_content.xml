<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_fresher_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.walter_white.amritacsecourse.Fresher_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF59D">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="OBJECTIVE:"
            android:id="@+id/obj"
            android:textSize="30dp"
            android:textColor="@android:color/holo_blue_dark"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/obj_text"
            android:layout_margin="@dimen/text_margin"
            android:text=""
            android:textSize="20dp"
            android:textColor="@android:color/holo_orange_light"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/unit_1"
            android:text="UNIT 1:"
            android:fontFamily="sans-serif-thin"
            android:textSize="24dp"
            android:textColor="#4CAF50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/unit_1_text"
            android:text=""
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#263238"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="UNIT 2:"
            android:fontFamily="sans-serif-thin"
            android:id="@+id/unit_2"
            android:textSize="24dp"
            android:textColor="#4CAF50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/unit_2_text"
            android:text=""
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#263238"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:text="UNIT 3:"
            android:id="@+id/unit_3"
            android:fontFamily="sans-serif-thin"
            android:textSize="24dp"
            android:textColor="#4CAF50"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/unit_3_text"
            android:text=""
            android:textSize="15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#263238"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/textbook"
            android:text="TEXTBOOKS:"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24dp"
            android:textColor="#64DD17"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/textbook_2"
            android:text=""
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#D50000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/textbook_1"
            android:text=""
            android:textSize="20dp"
            android:fontFamily="sans-serif-light"
            android:textColor="#D50000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:id="@+id/reference"
            android:text="REFERENCES:"
            android:fontFamily="sans-serif-condensed"
            android:textSize="24dp"
            android:textColor="#FF5722"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:fontFamily="sans-serif-light"
            android:id="@+id/reference_text"
            android:text=""
            android:textSize="20dp"
            android:textColor="#1A237E"/>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
